<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @post do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :external_url %>
      <%= f.text_field :external_url, class: 'form-control' %>
      <br>

      <%= f.submit "Create post", class: "btn btn-primary" %>
      <% end %>
  </div>
</div>
